<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActivityTheme" parent="ThemeDay">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowAnimationStyle">@style/AnimLeftRight</item>
    </style>

    <style name="ActivityThemeMoon" parent="ThemeNight">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowAnimationStyle">@style/AnimLeftRight</item>
    </style>

    <style name="ActivityThemeResize" parent="ThemeDay">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item>
        <item name="android:windowAnimationStyle">@style/AnimLeftRight</item>
    </style>

    <style name="ActivityThemeResizeMoon" parent="ThemeNight">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item>
        <item name="android:windowAnimationStyle">@style/AnimLeftRight</item>
    </style>

    <style name="ActivityThemeAnimUpDown" parent="ThemeDay">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowAnimationStyle">@style/AnimUpDown</item>
    </style>

    <style name="ActivityThemeAnimUpDownMoon" parent="ThemeNight">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowAnimationStyle">@style/AnimUpDown</item>
    </style>

    <style name="ActivityThemeAnimUpDownResize" parent="ThemeDay">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item>
        <item name="android:windowAnimationStyle">@style/AnimUpDown</item>
    </style>

    <style name="ActivityThemeAnimUpDownResizeMoon" parent="ThemeNight">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item>
        <item name="android:windowAnimationStyle">@style/AnimUpDown</item>
    </style>

