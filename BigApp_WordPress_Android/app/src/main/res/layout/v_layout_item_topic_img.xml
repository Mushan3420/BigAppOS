<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/c_bg_list_selector"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/tv_time"
        style="@style/TV_topic_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/TV_topic_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/TV_topic_item_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/iv_img_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/iv_img_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

    </LinearLayout>

</LinearLayout>