<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/z_iv_font_size"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="@string/z_font_size"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/z_shape_size_choice"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_small"
                style="@style/TV_size_choice_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/z_btn_txt_size_small" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#3D90D8" />

            <TextView
                android:id="@+id/tv_normal"
                style="@style/TV_size_choice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/z_btn_txt_size_normal" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#3D90D8" />

            <TextView
                android:id="@+id/tv_big"
                style="@style/TV_size_choice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/z_btn_txt_size_big" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#3D90D8" />

            <TextView
                android:id="@+id/tv_max"
                style="@style/TV_size_choice_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/z_btn_txt_size_max" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_finish"
        style="@style/Btn_gray_45_z"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:text="@string/z_btn_finish" />

</LinearLayout>