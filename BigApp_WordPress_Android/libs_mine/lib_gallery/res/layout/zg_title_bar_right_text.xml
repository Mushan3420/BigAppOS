<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/z_title_bar_height"
    android:background="?attr/c_bg_title_bar"
    android:minHeight="@dimen/z_title_bar_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/z_btn_title_bar_bg"
        android:contentDescription="@null"
        android:paddingEnd="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:paddingStart="16dp"
        android:scaleType="center"
        android:src="?attr/img_nav_back" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="?attr/c_txt_title_bar"
        android:textSize="@dimen/z_txt_size_0" />

    <TextView
        android:id="@+id/tv_right"
        style="@style/TV_title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:paddingStart="10dp"
        android:text="@string/zg_btn_finish" />

</LinearLayout>