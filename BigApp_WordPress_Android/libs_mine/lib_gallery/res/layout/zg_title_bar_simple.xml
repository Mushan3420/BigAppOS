<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zg_title_bar_height"
    android:background="@color/zg_bg_title_bar"
    android:minHeight="@dimen/zg_title_bar_height" >

    <ImageButton
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zg_title_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/zg_bg_title_bar_btn"
        android:contentDescription="@null"
        android:paddingEnd="5dp"
        android:paddingLeft="17dp"
        android:paddingRight="5dp"
        android:paddingStart="17dp"
        android:scaleType="fitCenter"
        android:src="@drawable/zg_default_back" />

    <ImageButton
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zg_title_bar_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/zg_bg_title_bar_btn"
        android:contentDescription="@null"
        android:paddingEnd="17dp"
        android:paddingLeft="5dp"
        android:paddingRight="17dp"
        android:paddingStart="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/zg_default_add" />

    <TextView
        android:id="@+id/title"
        android:layout_width="100dp"
        android:layout_height="@dimen/zg_title_bar_height"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/zg_title_bar_txt_size" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmallInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/title"
        android:layout_toRightOf="@id/title"
        android:visibility="gone" />

</RelativeLayout>